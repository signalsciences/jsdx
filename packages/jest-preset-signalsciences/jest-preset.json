{
  "collectCoverageFrom": [
    "src/**/*.jsx?",
    "!**/node_modules/**"
  ],
  "coverageDirectory": "coverage",
  "snapshotSerializers": [
    "enzyme-to-json/serializer"
  ],
  "setupTestFrameworkScriptFile": "jest-enzyme",
  "testEnvironment": "enzyme",
  "testEnvironmentOptions": {
    "enzymeAdapter": "react16"
  },
  "transform": {
    "^.+\\.jsx?$": "babel-jest"
  }
}
