{
  "name": "jsdx-monorepo",
  "private": true,
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.5.0"
  },
  "scripts": {
    "format": "prettier --write 'packages/**/*.{js,md}' './*.{js,md}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "eslint": "^6.7.0",
    "eslint-plugin-compat": "^3.3.0",
    "eslint-plugin-flowtype": "^4.4.1",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.0.0 || ^1.7.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "postcss-cli": "^7.1.0",
    "pre-commit": "1.2.2",
    "prettier": "^1.19.1",
    "react": "^16.8",
    "react-dom": "^16.8",
    "rollup": "^1.27.4",
    "stylelint": "^13.2.0"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
