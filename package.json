{
  "name": "jsdx-monorepo",
  "private": true,
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.5.0"
  },
  "scripts": {
    "format": "prettier --write 'packages/**/*.{js,md}' './*.{js,md}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^3.0.8",
    "lerna": "^3.16.4",
    "lint-staged": "^9.4.1",
    "pre-commit": "1.2.2",
    "prettier": "^1.18.1"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
