{
  "name": "jsdx-monorepo",
  "private": true,
  "engines": {
    "node": ">=8.0.0",
    "yarn": ">=1.5.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "babel": {
    "presets": [
      "babel-preset-signalsciences"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint-config-signalsciences"
    ]
  },
  "eslintIgnore": [
    "**/node_modules"
  ],
  "jest": {
    "preset": "jest-preset-signalsciences"
  },
  "lint-staged": {
    "packages/**/*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.0.0",
    "eslint": "^5.3.0",
    "eslint-plugin-compat": "^3.0.1",
    "eslint-plugin-flowtype": "^3.4.2",
    "eslint-plugin-import": "^2.15.0",
    "eslint-plugin-jest": "^22.4.0",
    "eslint-plugin-jsx-a11y": "^6.2.0",
    "eslint-plugin-react": "^7.12.4",
    "jest": "^24.5.0",
    "postcss-cli": "^6.1.2",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "stylelint": "^10.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.0.0",
    "@commitlint/config-conventional": "^8.0.0",
    "@commitlint/config-lerna-scopes": "^8.0.0",
    "husky": "^3.0.0",
    "lerna": "^3.13.1",
    "lerna-changelog": "^0.8.2",
    "lint-staged": "^9.2.0",
    "pre-commit": "1.2.2"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
